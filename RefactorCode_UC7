using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace NonStaticEmployeewangProg
{
    public class EmployeeAttendence
    {
        public void CheckAttendence()
        {
            Console.WriteLine("Calculating Employee Wage :");

            int workingHours = 8;

            int emphours = 0;
            int days = 1;
            int maxdays = 20;
            int maxhours = 100;
            int Totalwork = 0;
            int Monthwork = 0;
            int wagePerHour = 20;

            while ((emphours <= maxhours) && (days <= maxdays))
            {
                Random random = new Random();
                int atte = random.Next(3);


                if (atte == 1)
                {
                    Totalwork = wagePerHour * 8;
                    workingHours = 8;
                }
                else if (atte == 2)
                {
                    Totalwork = wagePerHour * 4;
                    workingHours = 4;
                }
                else
                {
                    Totalwork = 0;
                    workingHours = 0;
                }
                emphours += workingHours;

                if (emphours <= maxhours)
                {
                    Monthwork += Totalwork;
                    Console.WriteLine("day::{0} employee_hour::{1} empwage : {2}", days, emphours, Totalwork);
                }
                days++;
            }
            Console.WriteLine("Total month Work: " + Monthwork);
        }
    }
}
